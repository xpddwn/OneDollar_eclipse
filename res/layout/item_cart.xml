<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/whole_item_cart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cart_whole_item"
        android:background="@color/white">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/goods_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="#f60000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"

            android:text="Coach Newest Editoon,Plus you could check ths authenticty at counter"
            android:id="@+id/goods_name"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"

            android:layout_alignTop="@+id/goods_image"
            android:layout_toRightOf="@+id/goods_image"
            android:layout_toEndOf="@+id/goods_image"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:text="Total 118 entries"
            android:id="@+id/goods_total"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_below="@+id/goods_name"
            android:layout_alignLeft="@+id/goods_name"
            android:layout_alignStart="@+id/goods_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:text="2 left"
            android:id="@+id/goods_left"
            android:textSize="12dp"
            android:textColor="@color/ade_red"
            android:layout_alignTop="@+id/goods_total"
            android:layout_toRightOf="@+id/goods_total"
            android:layout_toEndOf="@+id/goods_total"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:text="I want to buy"
            android:id="@+id/good_want_buy"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/goods_image"
            android:layout_alignLeft="@+id/goods_total"
            android:layout_alignStart="@+id/goods_total"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/goods_bt_dec"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"

            android:gravity="center"
            android:background="@color/white"
            android:text="-"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/good_want_buy"
            android:layout_alignLeft="@+id/goods_left"
            android:layout_alignStart="@+id/goods_left" />

        <EditText
            android:id="@+id/goods_amount"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:minWidth="60dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/goods_bt_dec"
            android:layout_toRightOf="@+id/goods_bt_dec"
            android:layout_toEndOf="@+id/goods_bt_dec" />

        <Button
            android:id="@+id/goods_bt_inc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_alignTop="@+id/goods_amount"
            android:layout_toRightOf="@+id/goods_amount"
            android:layout_toEndOf="@+id/goods_amount" />


    </RelativeLayout>
</RelativeLayout>