<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@color/user_head_bag"
        android:orientation="vertical" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_special_disease_circle"
            android:text=" ï¼Ÿ"
            android:id="@+id/identity"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="click to login"
            android:textColor="@color/lucky_name"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Banlance" />
            
            <TextView
                android:id="@+id/credit_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/lucky_name"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="100" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/lucky_name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/user_text_shape"
                android:text="Deposit" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myFantasies"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="My fantasies" >
        </TextView>

        <TextView
            android:id="@+id/myRewards"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="My Rewards" >
        </TextView>

        <TextView
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="Address" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/payment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="Payment" >
        </TextView>

        <TextView
            android:id="@+id/deposit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="Deposit" >
        </TextView>

        <TextView
            android:id="@+id/account"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="My Account" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/story"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="My Winner Stories" >
        </TextView>

        <TextView
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="APP Settings" >
        </TextView>

        <TextView
            android:id="@+id/service"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="Online Customer Serrvice" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/qa"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="Q &amp; A" >
        </TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center" >
        </TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/textview_border"
            android:gravity="center" >
        </TextView>
    </LinearLayout>

</LinearLayout>